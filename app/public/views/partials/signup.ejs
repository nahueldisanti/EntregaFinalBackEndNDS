    <title>Signup</title>
</head>
<body>
    <div class="container mt-4">
        <h1>Registre un nuevo usuario</h1>
        <div class="row">
            <div class="col-sm-8 col-lg-4 col-md-6">
                <form class="form" action="/signup" method="post" role="form" autocomplete="off">
                    <legend>Ingrese sus datos:</legend>
                    <div class="form-group mt-4">
                        <input id="username" name='name' placeholder="Nombre y Apellido" class="form-control" type="text" required autofocus>
                    </div>
                    <br>
                    <div class="form-group">
                        <input id="username" name='username' placeholder="Nombre de usuario" class="form-control" type="text" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <input id="password" name='password' placeholder="ContraseÃ±a" class="form-control" type="password" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <input id="correo" name='correo' placeholder="Direccion de Correo" class="form-control" type="email" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <input id="domicilio" name='domicilio' placeholder="Domicilio" class="form-control" type="text" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <input id="edad" name='edad' placeholder="Edad" class="form-control" type="number" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <input id="tel" name='tel' placeholder="Celular" class="form-control" type="tel" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <input id="avatar" name='avatar' placeholder="Ingrese el link a su avatar" class="form-control" type="url" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <div class="d-grid gap-2">
                            <input class="btn btn-danger" type="submit" value="Registrar">
                            <a class="btn btn-outline-danger" href="/login">Ya tengo cuenta</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>